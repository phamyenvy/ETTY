<UserControl x:Class="LTUDQL2_QUAN_LY_CCVIDEO.Views.ProfileSetting.uc_EditProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LTUDQL2_QUAN_LY_CCVIDEO.Views.ProfileSetting"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="White"
             d:DesignHeight="490" d:DesignWidth="945">
    <Grid>
        <UniformGrid Rows="4" Height="480" VerticalAlignment="Top">
            <Border>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/ava1.png"
                   Margin="50,5"/>
                    <TextBox x:Name="name1" materialDesign:HintAssist.Hint="Profile Name" VerticalAlignment="Center"
                      Width="250" Style="{StaticResource MaterialDesignFloatingHintTextBox}">Strange</TextBox>
                    <CheckBox x:Name="Check1" Margin="25" Foreground="Gray" Background="#FFECCA06" BorderBrush="#FFECCA06" Checked="Check1_Checked" Unchecked="Check1_Unchecked">Check for main profile</CheckBox>
                </StackPanel>
            </Border>
            <Border>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/ava2.png"
                   Margin="50,5"/>
                    <TextBox x:Name="name2" materialDesign:HintAssist.Hint="Profile Name" VerticalAlignment="Center"
                      Width="250" Style="{StaticResource MaterialDesignFloatingHintTextBox}" >Steve</TextBox>
                    <CheckBox x:Name="check2" Margin="25" Foreground="Gray" Background="#FFECCA06" BorderBrush="#FFECCA06" Checked="check2_Checked" Unchecked="check2_Unchecked">Check for main profile</CheckBox>
                </StackPanel>
            </Border>
            <Border>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/ava3.png"
                   Margin="50,5"/>
                    <TextBox x:Name="name3" materialDesign:HintAssist.Hint="Profile Name" VerticalAlignment="Center"
                      Width="250" Style="{StaticResource MaterialDesignFloatingHintTextBox}">Scottlang</TextBox>
                    <CheckBox x:Name="check3" Margin="25" Foreground="Gray" Background="#FFECCA06" BorderBrush="#FFECCA06" Checked="check3_Checked" Unchecked="check3_Unchecked">Check for main profile</CheckBox>
                </StackPanel>
            </Border>
            <Border>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/ava4.png"
                   Margin="50,5"/>
                    <TextBox x:Name="name4" materialDesign:HintAssist.Hint="Profile Name" VerticalAlignment="Center"
                      Width="250" Style="{StaticResource MaterialDesignFloatingHintTextBox}" >Banner</TextBox>
                    <CheckBox x:Name="check4" Margin="25" Foreground="Gray" Background="#FFECCA06" BorderBrush="#FFECCA06" Checked="check4_Checked" Unchecked="check4_Unchecked">Check for main profile</CheckBox>
                </StackPanel>
            </Border>


        </UniformGrid>
        <Button VerticalAlignment="Bottom" Width="150" HorizontalAlignment="Right" Margin="15"
                Background="#FFECCA06" BorderBrush="Transparent" Click="Button_Click">Save Change</Button>
    </Grid>
</UserControl>
